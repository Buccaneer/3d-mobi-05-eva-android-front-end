<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.evavzw.eva21daychallenge">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/eva_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="be.evavzw.eva21daychallenge.activity.Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="be.evavzw.eva21daychallenge.activity.Register"
            android:label="@string/title_activity_register"
            android:parentActivityName="be.evavzw.eva21daychallenge.activity.Login"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="be.evavzw.eva21daychallenge.activity.Login" />
        </activity>
        <activity
            android:name="be.evavzw.eva21daychallenge.activity.challenges.ChallengeActivity"
            android:label="@string/title_activity_challenge"
            android:parentActivityName=".activity.MainMenu"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name="be.evavzw.eva21daychallenge.activity.MainMenu"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/AppTheme.NoActionbar"></activity>
    </application>

</manifest>
