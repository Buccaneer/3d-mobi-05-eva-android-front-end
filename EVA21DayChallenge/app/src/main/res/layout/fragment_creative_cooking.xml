<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="be.evavzw.eva21daychallenge.activity.challenges.CreativeCookingFragment"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/selectListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/numberOfRecipes"
                android:text="@string/numberOfRecipes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/numberOfRecipesFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/numberOfRecipes"
                android:layout_toEndOf="@id/numberOfRecipes"
                android:text=" 0"
                android:freezesText="true"/>
        </RelativeLayout>


        <Button
            android:text="@string/verder"
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/eva_donkergroen"
            android:background="@color/eva_lichtgroen"/>

        <be.evavzw.eva21daychallenge.customComponent.SearchableCheckListView
            android:id="@+id/checkListView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recipeListview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:text="@string/backToIngredients"
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/eva_donkergroen"
            android:background="@color/eva_lichtgroen"/>

    </LinearLayout>

</LinearLayout>
